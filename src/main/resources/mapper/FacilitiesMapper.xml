	<select id="getAmenityListByAccomId" resultType="FacilitiesVO">
		select * from Facilities where accom_id = #{accom_id}
	</select>
	<insert id="insertAmenity" parameterType="FacilitiesVO" >
		INSERT INTO facilities (
			amen_id,
			accom_id,
			amenity_type,
   		    amenity_value
		) VALUES (
			#{amen_id       },
			#{accom_id      },
			#{amenity_type  },
   		    #{amenity_value }
		)
	</insert>
	<delete id="deleteAmenityListByAccomId">
		delete from Facilities where accom_id = #{value}
	</delete>
